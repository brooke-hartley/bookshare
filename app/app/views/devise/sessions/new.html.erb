<div class="container vh-100 d-flex justify-content-center align-items-center" id="sign-up-container">
  <div class="card p-4" id="sign-up-card">
    <h1 class="text-center mb-4" id="sign-up-title">Log In</h1>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'mb-0' }) do |f| %>
        <div class="row align-items-center pt-3 pb-2">
          <div class="col-md-4">
            <h6 class="mb-0">Email</h6>
          </div>
          <div class="col-md-8">
            <%= f.email_field :email, class: "form-control form-control-lg", autocomplete: "email" %>
          </div>
        </div>

        <hr class="mx-n3">

        <div class="row align-items-center py-2">
          <div class="col-md-4">
            <h6 class="mb-0">Password</h6>
          </div>
          <div class="col-md-8">
            <%= f.password_field :password, class: "form-control form-control-lg", autocomplete: "current-password" %>
          </div>
        </div>

         <hr class="mx-n3">

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
           <div class="px-4 py-3 text-center">
          <%= f.submit "Log in", class: "btn btn-primary btn-lg btn-block" %>
        </div>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
