<div class="container vh-100 d-flex justify-content-center align-items-center" id="sign-up-container">
  <div class="card p-4" id="sign-up-card">
    <h1 class="text-center mb-4" id="sign-up-title">Sign Up</h1>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'mb-0' }) do |f| %>

        <div class="row align-items-center pt-3 pb-2">
          <div class="col-md-4">
            <h6 class="mb-0">Username</h6>
          </div>
          <div class="col-md-8">
            <%= f.text_field :username, class: "form-control form-control-lg" %>
          </div>
        </div>

        <hr class="mx-n3">

        <div class="row align-items-center py-2">
          <div class="col-md-4">
            <h6 class="mb-0">Email address</h6>
          </div>
          <div class="col-md-8">
            <%= f.email_field :email, class: "form-control form-control-lg", placeholder: "example@example.com" %>
          </div>
        </div>

        <hr class="mx-n3">

        <div class="row align-items-center py-2">
          <div class="col-md-4">
            <h6 class="mb-0">Password</h6>
          </div>
          <div class="col-md-8">
            <%= f.password_field :password, class: "form-control form-control-lg", autocomplete: "new-password" %>
          </div>
        </div>

        <hr class="mx-n3">

        <div class="row align-items-center py-2">
          <div class="col-md-4">
            <h6 class="mb-0">Confirm Password</h6>
          </div>
          <div class="col-md-8">
            <%= f.password_field :password_confirmation, class: "form-control form-control-lg", autocomplete: "new-password" %>
          </div>
        </div>

        <hr class="mx-n3">

        <div class="px-4 py-3 text-center">
          <%= f.submit "Sign up", class: "btn btn-primary btn-lg btn-block" %>
        </div>
        <div class="text-center">
          <p>Already have an account? <%= link_to "Log in", new_user_session_path %></p>
        </div>

      <% end %>
    </div>
  </div>
</div>
